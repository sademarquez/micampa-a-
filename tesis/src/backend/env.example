# Configuración del entorno
NODE_ENV=development

# Puerto del servidor
PORT=3001

# Configuración de Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuración de JWT
JWT_SECRET=tu-jwt-secret-super-seguro-cambiar-en-produccion
JWT_REFRESH_SECRET=tu-refresh-secret-super-seguro-cambiar-en-produccion
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de n8n
N8N_WEBHOOK_SECRET=tu-n8n-webhook-secret-cambiar-en-produccion
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=

# Configuración de servicios externos
FRONTEND_URL=http://localhost:5173

# Configuración de servicios de mensajería
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

WHATSAPP_PROVIDER=twilio
WHATSAPP_PHONE_NUMBER=

# Configuración de base de datos
DATABASE_URL=postgresql://username:password@localhost:5432/agora_db

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de seguridad
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090

# Configuración de desarrollo
DEBUG=true
ENABLE_SWAGGER=true
SWAGGER_URL=/api-docs 